<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- Astribot S1夹爪完整接口定义宏 - 参考AG2F120S的设计模式 -->
	<xacro:macro name="astribot_s1_gripper_interfaces" params="name">
		<xacro:arg name="gazebo" default="false"/>
		<xacro:property name="prefix" value="${name + '_' if name else ''}"/>

		<!-- 夹爪主关节接口定义 -->
		<joint name="${prefix}gripper_joint">
			<command_interface name="position"/>
			<state_interface name="position">
				<param name="initial_value">1.0</param>
			</state_interface>
			<state_interface name="velocity"/>
			<state_interface name="effort"/>
		</joint>

		<xacro:if value="$(arg gazebo)">
			<!-- Astribot S1夹爪的mimic关节接口 -->
			<joint name="${prefix}gripper_joint_L2">
				<state_interface name="position"/>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
			<joint name="${prefix}gripper_joint_L11">
				<state_interface name="position"/>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
			<joint name="${prefix}gripper_joint_R1">
				<state_interface name="position"/>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
			<joint name="${prefix}gripper_joint_R2">
				<state_interface name="position"/>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
			<joint name="${prefix}gripper_joint_R11">
				<state_interface name="position"/>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
		</xacro:if>
	</xacro:macro>

</robot>