      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1_xy/a1_x/link3.obj"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}joint3" type="revolute">
