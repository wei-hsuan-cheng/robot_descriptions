      <child link="${prefix}link5"/>
      <axis xyz="0 0 1"/>
      <limit lower="-1.5708" upper="1.5708" effort="14" velocity="32.9867"/>
    </joint>

    <link name="${prefix}link6">
      <inertial>
        <origin xyz="0.00709944426961403 -8.90673146347609E-10 -3.82632235882419E-05"/>
