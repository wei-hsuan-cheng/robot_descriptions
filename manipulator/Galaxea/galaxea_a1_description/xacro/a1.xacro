<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:macro name="Arm" params="name direction:=normal">
    <xacro:property name="prefix" value="${name + '_' if name else ''}"/>

    <!-- Base Link -->
    <link name="${prefix}base_link">
      <inertial>
        <origin xyz="-0.0005634 0.038934 3.1874E-06"/>
        <mass value="1.658"/>
        <inertia
            ixx="0.0010597"
            ixy="1.9821E-05"
            ixz="-1.6752E-07"
            iyy="0.0011787"
            iyz="-1.9146E-07"
            izz="0.0010647"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/base_link.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/base_link.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Link 1 -->
    <link name="${prefix}link1">
      <inertial>
        <origin xyz="0.000015 0.105259 -0.001954"/>
        <mass value="1.164"/>
        <inertia
            ixx="0.001125"
            ixy="0.0"
            ixz="0.0"
            iyy="0.001084"
            iyz="-0.000023"
            izz="0.001158"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link1.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link1.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint 1: Base to Link1 -->
    <joint name="${prefix}joint1" type="revolute">
      <origin xyz="-0.0011147 0 0.0446"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link1"/>
      <axis xyz="0 0 1"/>
      <limit lower="-2.8798" upper="2.8798" effort="100" velocity="20.944"/>
    </joint>

    <!-- Link 2 -->
    <link name="${prefix}link2">
      <inertial>
        <origin xyz="-0.23622 0.016352 -0.00013275"/>
        <mass value="1.3"/>
        <inertia
            ixx="0.00060638"
            ixy="0.00041817"
            ixz="0.00014956"
            iyy="0.0075936"
            iyz="-8.0916E-06"
            izz="0.0075712"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link2.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link2.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint 2: Link1 to Link2 -->
    <joint name="${prefix}joint2" type="revolute">
      <origin xyz="0 0 0.1061" rpy="${PI/2.0} 0 0"/>
      <parent link="${prefix}link1"/>
      <child link="${prefix}link2"/>
      <axis xyz="0 0 -1"/>
      <limit lower="0" upper="3.2289" effort="100" velocity="20.944"/>
    </joint>

    <!-- Link 3 -->
    <link name="${prefix}link3">
      <inertial>
        <origin xyz="0.045114 0.054616 -0.00045593"/>
        <mass value="0.818"/>
        <inertia
            ixx="0.00060107"
            ixy="-0.00022467"
            ixz="-7.1194E-06"
            iyy="0.0013959"
            iyz="-9.7503E-06"
            izz="0.0015027"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link3.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link3.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint 3: Link2 to Link3 -->
    <joint name="${prefix}joint3" type="revolute">
      <origin xyz="-0.34928 0.019998 0"/>
      <parent link="${prefix}link2"/>
      <child link="${prefix}link3"/>
      <axis xyz="0 0 -1"/>
      <limit lower="-3.3161" upper="0" effort="100" velocity="7.5398"/>
    </joint>

    <!-- Link 4 -->
    <link name="${prefix}link4">
      <inertial>
        <origin xyz="0.24285 0.0023784 1.279E-06"/>
        <mass value="0.698"/>
        <inertia
            ixx="8.45E-05"
            ixy="-8.2627E-07"
            ixz="-2.2607E-09"
            iyy="0.00010174"
            iyz="5.3612E-09"
            izz="9.7044E-05"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link4.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link4.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint 4: Link3 to Link4 -->
    <joint name="${prefix}joint4" type="revolute">
      <origin xyz="0.02735 0.069767 0"/>
      <parent link="${prefix}link3"/>
      <child link="${prefix}link4"/>
      <axis xyz="1 0 0"/>
      <limit lower="-2.8798" upper="2.8798" effort="100" velocity="25.133"/>
    </joint>

    <!-- Link 5 -->
    <link name="${prefix}link5">
      <inertial>
        <origin xyz="0.054309 0.0041811 4.0699E-06"/>
        <mass value="0.417"/>
        <inertia
            ixx="8.3999E-05"
            ixy="1.6234E-05"
            ixz="7.4127E-08"
            iyy="9.8498E-05"
            iyz="-1.3811E-08"
            izz="0.00011333"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link5.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link5.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint 5: Link4 to Link5 -->
    <joint name="${prefix}joint5" type="revolute">
      <origin xyz="0.2463 -0.00049894 0"/>
      <parent link="${prefix}link4"/>
      <child link="${prefix}link5"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.6581" upper="1.6581" effort="100" velocity="25.133"/>
    </joint>

    <!-- Link 6 -->
    <link name="${prefix}link6">
      <inertial>
        <origin xyz="0.028138 1.2134E-07 5.4049E-08"/>
        <mass value="0.037"/>
        <inertia
            ixx="3.5662E-06"
            ixy="6.6514E-12"
            ixz="2.9628E-12"
            iyy="2.0238E-06"
            iyz="-4.1666E-12"
            izz="2.0238E-06"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link6.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/a1/visual/link6.obj"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint 6: Link5 to Link6 -->
    <joint name="${prefix}joint6" type="revolute">
      <origin xyz="0.058249 0.00050025 0"/>
      <parent link="${prefix}link5"/>
      <child link="${prefix}link6"/>
      <axis xyz="1 0 0"/>
      <limit lower="-2.8798" upper="2.8798" effort="100" velocity="25.133"/>
    </joint>

    <!-- Include Gripper -->
    <xacro:include filename="$(find galaxea_a1_description)/xacro/gripper_g1.xacro"/>
    <xacro:Gripper name="${name}"/>

    <!-- Gripper Properties -->
    <xacro:property name="gripper_origin_xyz" value="${'0.1039 0 0'}"/>
    <xacro:property name="gripper_origin_rpy"
                    value="${'-' + str(PI/2.0) + ' 0 0' if direction == 'normal' else str(PI) + ' 0 0' if direction == 'right' else '0 0 0'}"/>
    <origin xyz="${gripper_origin_xyz}" rpy="${gripper_origin_rpy}"/>

    <!-- Gripper Base Joint -->
    <joint name="${prefix}gripper_base_joint" type="fixed">
      <origin xyz="${gripper_origin_xyz}" rpy="${gripper_origin_rpy}"/>
      <parent link="${prefix}link6"/>
      <child link="${prefix}gripper_base"/>
    </joint>
  </xacro:macro>
</robot>